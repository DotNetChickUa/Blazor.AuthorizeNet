FROM mcr.microsoft.com/dotnet/sdk:10.0 AS build

WORKDIR /app

COPY . ./

RUN dotnet publish SampleBlazorApp/SampleBlazorApp.csproj -c Release

FROM mcr.microsoft.com/dotnet/aspnet:10.0
WORKDIR /app
COPY --from=build /app/SampleBlazorApp/bin/Release/net10.0/publish/ ./
ENTRYPOINT ["dotnet", "SampleBlazorApp.dll"]